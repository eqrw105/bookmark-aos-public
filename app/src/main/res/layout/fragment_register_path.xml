<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="com.nims.bookmark.ui.RegisterViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/CommonContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.RegisterPathFragment">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/folder"
            style="@style/CommonSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/space"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.legacy.widget.Space
            android:id="@+id/space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/title"
            style="@style/RegisterPathTitleEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/folder" />

        <EditText
            android:id="@+id/url"
            style="@style/RegisterPathUrlEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/title" />

        <Button
            android:id="@+id/done"
            style="@style/CommonButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="@{(v) -> viewModel.createPath(v, title.getText().toString(), url.getText().toString(), folder.getSelectedItem())}"
            android:text="@string/register_done"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>