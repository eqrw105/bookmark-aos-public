<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CommonActionBar" parent="Theme.Bookmark">
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CommonTabLayout" parent="Theme.Bookmark">
        <item name="tabMode">scrollable</item>
    </style>

    <style name="CommonFloatingActionButton" parent="Theme.Bookmark">
        <item name="android:layout_marginEnd">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="layout_anchor">@id/container</item>
        <item name="layout_anchorGravity">bottom|end</item>
    </style>
</resources>