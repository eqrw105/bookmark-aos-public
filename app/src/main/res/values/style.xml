<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Bookmark" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="CommonActionBar" parent="Theme.Bookmark">
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="ScrollTabLayout" parent="Theme.Bookmark">
        <item name="tabMode">scrollable</item>
    </style>

    <style name="FixedTabLayout" parent="Theme.Bookmark">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
    </style>

    <style name="CommonEditText" parent="Theme.Bookmark">
        <item name="colorControlNormal">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CommonContainer" parent="Theme.Bookmark">
        <item name="android:padding">20dp</item>
    </style>

    <style name="CommonItemContainer" parent="CommonContainer">
        <item name="android:background">?selectableItemBackground</item>
    </style>

    <style name="CommonButton" parent="Theme.Bookmark">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="CommonSpinner" parent="Theme.Bookmark">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorPrimary</item>
    </style>

    <style name="CommonSpinnerItem" parent="Theme.Bookmark">
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainPathContainer" parent="Theme.Bookmark">
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="MainPathTitleTextView" parent="Theme.Bookmark">
        <item name="android:textSize">18sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="MainPathUrlTextView" parent="Theme.Bookmark">
        <item name="android:textSize">15sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CommonProgressBar" parent="Theme.Bookmark">
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="CommonScrollTopImageView" parent="Theme.Bookmark">
        <item name="android:layout_gravity">center|bottom</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:src">@drawable/ic_circle_arrow_top</item>
    </style>

    <style name="EditFolderDeleteImageView" parent="Theme.Bookmark">
        <item name="android:src">@drawable/ic_delete</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="EditFolderShareImageView" parent="Theme.Bookmark">
        <item name="android:src">@drawable/ic_share</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="CommonTitleTextView" parent="Theme.Bookmark">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="EditHelpTextView" parent="Theme.Bookmark">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:padding">10dp</item>
        <item name="android:gravity">right</item>
    </style>
</resources>